<?php
/**
 * @file
 * Code for the DrupalCebu Logo Contents Content Type feature.
 */

include_once 'drupalcebu_logo_contents_content_type.features.inc';

/**
 * Implements hook_form_alter()
 */
function drupalcebu_logo_contents_content_type_form_alter(&$form, &$form_state, $form_id) {
  global $user;
  if ($form_id == 'logo_contest_node_form') {
    $form['actions']['preview']['#access'] = !$user->uid ? FALSE : TRUE;
    $form['field_logo_agreement']['#access'] = !$user->uid ? TRUE : FALSE ;
    $form['field_logo_agreement'][LANGUAGE_NONE]['#required'] = !$user->uid ? TRUE : FALSE;
  }
}
